<body>
  <!--
    Embedded scene so it doesn't take the full page layout controls.
    You can toggle debugUIEnabled or change sourceType (webcam / image / video) in the arjs attribute.
  -->
  <a-scene embedded arjs="sourceType: webcam; debugUIEnabled: false;">
    <!-- Marker-based AR using the built-in "hiro" marker -->
    <a-marker preset="hiro">
      <!-- 3D model placed on the marker -->
      <a-entity
        position="0 0 0"
        rotation="0 0 0"
        scale="0.05 0.05 0.05"
        gltf-model="https://raw.githack.com/AR-js-org/AR.js/master/aframe/examples/image-tracking/nft/trex/scene.gltf"
        animation-mixer
      ></a-entity>
    </a-marker>

    <!-- Optional: a simple plane to help visualize marker alignment (uncomment to use) -->
    <!--
    <a-marker preset="hiro">
      <a-plane position="0 0 0" rotation="-90 0 0" width="1" height="1" color="#7BC8A4" opacity="0.5"></a-plane>
    </a-marker>
    -->

    <!-- Camera -->
    <a-entity camera></a-entity>
  </a-scene>
</body>
